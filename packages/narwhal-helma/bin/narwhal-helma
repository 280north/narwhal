#!/bin/bash

# get the absolute path of the executable
SELF_PATH=$(cd -P -- "$(dirname -- "$0")" && pwd -P) && SELF_PATH="$SELF_PATH/$(basename -- "$0")"

# resolve symlinks
while [ -h "$SELF_PATH" ]; do
	DIR=$(dirname -- "$SELF_PATH")
	SYM=$(readlink -- "$SELF_PATH")
	SELF_PATH=$(cd "$DIR" && cd $"(dirname -- "$SYM")" && pwd)/$(basename -- "$SYM")
done

NARWHAL_ENGINE_HOME=$(dirname "$(dirname -- "$SELF_PATH")")
BOOTSTRAP=$NARWHAL_ENGINE_HOME/bootstrap.js

if [ ! "$NARWHAL_HOME" ]; then
	NARWHAL_HOME=$(dirname -- "$(dirname -- "$NARWHAL_ENGINE_HOME")")
fi

export NARWHAL_ENGINE_HOME

HELMA_MODULE_PATH=$HELMA_MODULE_PATH:$NARWHAL_HOME/engines/rhino/lib
HELMA_MODULE_PATH=$HELMA_MODULE_PATH:$NARWHAL_HOME/engines/default/lib
HELMA_MODULE_PATH=$HELMA_MODULE_PATH:$NARWHAL_HOME/lib
export HELMA_MODULE_PATH

HELMA=$(which helma 2>/dev/null)

# drop into shell if there are no additional arguments
if [ $# -lt 1 ]; then
    # uses rlwrap (readline wrapper) if present
    RLWRAP=$(which rlwrap 2>/dev/null)
	$RLWRAP $HELMA -d -i -b "$NARWHAL_ENGINE_HOME/bootstrap.js"
else
	$HELMA -d -b "$NARWHAL_ENGINE_HOME/bootstrap.js" "$@"
fi

